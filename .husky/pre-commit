#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "ğŸš€ Running comprehensive pre-commit checks (matching CI)..."

# Function to check if command exists
command_exists() {
  command -v "$1" >/dev/null 2>&1
}

# Check if bun is available for example-expo checks
EXAMPLE_EXPO_CHANGED=$(git diff --cached --name-only | grep -q "^example-expo/" && echo "true" || echo "false")

# 1. Run lint-staged for changed files
echo "âœ¨ Running lint-staged..."
yarn lint-staged
if [ $? -ne 0 ]; then
  echo "âŒ Lint-staged failed. Please fix errors before committing."
  exit 1
fi

# 2. Library TypeScript check (matches ci-lint.yml)
echo "ğŸ” [CI-LINT] Running library TypeScript check..."
yarn typecheck:lib
if [ $? -ne 0 ]; then
  echo "âŒ [CI-LINT] Library TypeScript check failed. Please fix errors before committing."
  exit 1
fi

# 3. Library ESLint check (matches ci-lint.yml)
echo "ğŸ” [CI-LINT] Running library ESLint..."
yarn lint
if [ $? -ne 0 ]; then
  echo "âŒ [CI-LINT] Library ESLint check failed. Please fix errors before committing."
  exit 1
fi

# 4. Example-expo checks if changed (matches ci-example-expo.yml)
if [ "$EXAMPLE_EXPO_CHANGED" = "true" ]; then
  if command_exists bun; then
    echo "ğŸ” [CI-EXAMPLE-EXPO] Running example-expo TypeScript check..."
    cd example-expo && bun run typecheck && cd ..
    if [ $? -ne 0 ]; then
      echo "âŒ [CI-EXAMPLE-EXPO] Example-expo TypeScript check failed. Please fix errors before committing."
      exit 1
    fi
    
    echo "ğŸ” [CI-EXAMPLE-EXPO] Running example-expo ESLint..."
    cd example-expo && bun run lint && cd ..
    if [ $? -ne 0 ]; then
      echo "âŒ [CI-EXAMPLE-EXPO] Example-expo ESLint check failed. Please fix errors before committing."
      exit 1
    fi
  else
    echo "âš ï¸ [CI-EXAMPLE-EXPO] Bun not found. Skipping example-expo checks."
    echo "   Install bun globally to enable example-expo pre-commit checks."
  fi
fi

# 5. Nitro code generation if .nitro.ts files were changed
if git diff --cached --name-only | grep -q "\.nitro\.ts$"; then
  echo "âš™ï¸ [NITRO] Regenerating Nitro code..."
  yarn specs
  if [ $? -ne 0 ]; then
    echo "âŒ [NITRO] Nitro code generation failed. Please fix errors before committing."
    exit 1
  fi
  
  # Nitro generated files are gitignored, so no need to add them
  echo "âœ… [NITRO] Nitro code regenerated successfully."
fi

# 6. Library build check (light version of ci-library.yml)
if git diff --cached --name-only | grep -qE "(src/|android/|ios/|nitrogen/)"; then
  echo "ğŸ”¨ [BUILD] Running library build check..."
  yarn prepare 2>/dev/null || {
    echo "âš ï¸ [BUILD] Library build check failed. This may cause CI build failures."
    echo "   Consider running 'yarn prepare' manually to verify build."
  }
fi

# 7. Run tests to prevent regressions (block on failure)
RUN_LIB_TESTS=false
RUN_EXAMPLE_TESTS=false

if git diff --cached --name-only | grep -qE "^(src/|plugin/|jest\\.|package\\.json|yarn\\.lock)"; then
  RUN_LIB_TESTS=true
fi
if git diff --cached --name-only | grep -qE "^example/(screens|components|__tests__|package\\.json)"; then
  RUN_EXAMPLE_TESTS=true
fi

if [ "$RUN_LIB_TESTS" = "true" ]; then
  echo "ğŸ§ª [TEST] Running library tests with coverage..."
  yarn test:ci
  if [ $? -ne 0 ]; then
    echo "âŒ [TEST] Library tests failed. Fix tests before committing."
    exit 1
  fi
fi

if [ "$RUN_EXAMPLE_TESTS" = "true" ]; then
  echo "ğŸ§ª [TEST] Running example app tests with coverage..."
  yarn test:ci:example
  if [ $? -ne 0 ]; then
    echo "âŒ [TEST] Example tests failed. Fix tests before committing."
    exit 1
  fi
fi

echo "âœ… All pre-commit checks passed! ğŸ‰"
echo "ğŸ“‹ Checks performed:"
echo "   âœ“ Lint-staged (file formatting)"
echo "   âœ“ Library TypeScript & ESLint"
if [ "$EXAMPLE_EXPO_CHANGED" = "true" ]; then
  echo "   âœ“ Example-expo TypeScript & ESLint"
fi
echo "   âœ“ Nitro code generation (if needed)"
echo "   âœ“ Build validation (if needed)"
if [ "$RUN_LIB_TESTS" = "true" ] || [ "$RUN_EXAMPLE_TESTS" = "true" ]; then
  echo "   âœ“ Tests (${RUN_LIB_TESTS:+library }${RUN_EXAMPLE_TESTS:+example})"
fi
echo ""
echo "ğŸš€ Ready to commit! This should pass all CI checks."
